<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenActivity">

    <ImageView
        android:id="@+id/iv_AppLogoImg"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="156dp"
        android:src="@drawable/app_logo_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_AppNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/heading_pro_heavy"
        android:text="TRANSLATOR APP"
        android:textAlignment="center"
        android:textColor="@color/PrimaryColor"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_AppLogoImg" />


    <TextView
        android:id="@+id/tv_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sf_pro_medium"
        android:text="Turn Pictures Into Words, Seamlessly"
        android:textColor="@color/DarkSecondaryColor"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_AppNameTxt"
        app:layout_constraintStart_toStartOf="@+id/tv_AppNameTxt"
        app:layout_constraintTop_toBottomOf="@+id/tv_AppNameTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>